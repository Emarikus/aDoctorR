<idea-plugin>
  <id>it.unisa.plugin.adoctorr</id>
  <name>aDoctor-R</name>
  <version>1.0</version>
  <vendor email="emaiannone@hotmail.it">Emanuele Iannone</vendor>

  <description><![CDATA[
      Plugin per refactoring di energy smell per Android.
    ]]></description>

  <change-notes><![CDATA[
      NA
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
      <action id="start_action" class="adoctorr.presentation.action.StartAction" text="aDoctor-R"
              description="Run the aDoctor-R plugin">
          <add-to-group group-id="AnalyzeMenu" anchor="last"/>
      </action>
  </actions>

</idea-plugin>